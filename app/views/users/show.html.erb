<p id="notice"><%= notice %></p>
<% provide(:title,@user.name) %>
<div class = "row text-center">
  <aside class="col-md-12">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <% @user.name %>

      </h1>
      <div class="text-center">
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <p>
          <strong>Name:</strong>
          <%= @user.name %>
        </p>

        <%= link_to 'Edit', edit_user_path(@user) %> |
        <%= link_to 'Back', users_path %>
      </div>
    </section>
  </aside>
</div>
